<div class="contact-form-section" id="contactUs">
    <div class="contact-form-section-wrapper">
        <div class="container">
            <div class="row gx-5 contact-form-section-row">
                <div class="col-lg-6 offset-lg-0 col-md-8 offset-md-2 col-10 offset-1">
                    <!--
                    contact form - start
                    -->
                    <div class="contact-form drop-shadow-2">
                        <div class="contact-form-wrapper">
                            <div class="section-heading section-heading-2 center">
                                <div class="sub-heading c-purple upper ls-1">
                                    <i class="las la-envelope"></i>
                                    <h5></h5>
                                </div>
                                <div class="main-heading c-dark">
                                    <h1>@sharedResource["Write message"]</h1>
                                </div>
                            </div>
                            <form asp-page-handler="AddContactUs" method="post" enctype="multipart/form-data">
                                <div class="form-floating">
                                    <input class="input form-control" asp-for="@Model.contactUs.FullName" placeholder="@sharedResource["Full Name"]">
                                    <label class="labelform" for="name-field">@sharedResource["Full Name"]</label>
                                </div>
                                <div class="form-floating">
                                    <input class="input form-control" asp-for="@Model.contactUs.Email" placeholder="@sharedResource["Email"]">
                                    <label class="labelform" for="email-field">@sharedResource["Email"]</label>
                                </div>
                                <div class="form-floating">
                                    <input class="input form-control" asp-for="@Model.contactUs.Mobile" placeholder="@sharedResource["Mobile"]">
                                    <label class="labelform" for="email-field">@sharedResource["Mobile"]</label>
                                </div>
                                <div class="form-floating">
                                    <input class="input form-control" asp-for="@Model.contactUs.Msg" placeholder="@sharedResource["Message"]">
                                    <label class="labelform" for="message-field">@sharedResource["Message"]</label>
                                </div>
                                <button type="submit" class="button button-3">
                                    <span class="button-inner">
                                        <span class="button-content">
                                            <span class="text">@sharedResource["Submit Reply"]</span>
                                        </span>
                                    </span>
                                </button>
                            </form>
                          
                        </div>
                    </div>
                    <!--
                    contact form - end
                    -->
                </div>
                <div class="col-lg-6 offset-lg-0 col-md-8 offset-md-2 col-10 offset-1">
                    <!--
                    newsletter form - start
                    -->
                    <div class="contact-form contact-form-1 drop-shadow-2">
                        <div class="contact-form-wrapper">
                            <div class="section-heading section-heading-2 center">
                                <div class="sub-heading c-purple upper ls-1">
                                    <i class="las la-envelope-open"></i>
                                    <h5>@sharedResource["Subscribe"]</h5>
                                </div>
                                <div class="main-heading c-dark">
                                    <h1>@sharedResource["Our newsletter"]</h1>
                                </div>
                            </div>
                            <div class="contact-form-icon">
                                <i class="las la-envelope-open-text"></i>
                            </div>

                            <form  id="Newsletter" name="Newsletter" asp-page-handler="AddNewsletter" method="post" enctype="multipart/form-data">
                                <div class="form-floating">
                                    <input class="input form-control" asp-for="@Model.newsletter.Email" id="email-field-1" type="text" placeholder=@sharedResource["Email"]>
                                    <label class="labelform" for="email-field-1">@sharedResource["Email"]</label>
                                </div>
                                <button style="margin-top: 13.9rem;" type="submit" class="button button-2">
                                    <span class="button-inner">
                                        <span class="button-content">
                                            <span class="text">@sharedResource["Subscribe"]</span>
                                        </span>
                                    </span>
                                </button>
                            </form>
                          
                        </div>
                    </div>
                    <!--
                    newsletter form - end
                    -->
                </div>
            </div>
        </div>
    </div>
</div>
