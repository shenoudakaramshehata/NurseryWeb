@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<style>
    label{
        font-size: 2rem;
    }
    .form-control{
        font-size: 2rem;
    }
</style>
<div class="hero hero-1 feature-section feature-section-0">
    <div class="hero-wrapper">
        <div class="container">
<div class="row">
    <div class="col-md-4">
        <div class="hero-image">
            <h4>@sharedResource["Reset your password"]</h4>
             <br />
            <br />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-group">
                <label asp-for="Input.Email">@sharedResource["Email"]</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <br />
            <br />
            <div class="form-group">
                <label asp-for="Input.Password">@sharedResource["Password"]</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
             <br />
            <br />
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">@sharedResource["Confirm Password"]</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <br />
            <button type="submit" class="btn btn-primary" style=" font-size: 2rem;">@sharedResource["Confirm"]</button>
        </form>
        </div>
    </div>
</div>
     </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
