@page
@model Nursery.Areas.Admin.Pages.Cities.EditModel
@{
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Edit"]  @sharedResource["City"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">
                        <br />
                        <form id="form" method="post" enctype="multipart/form-data">
                            @(Html.DevExtreme().Form<Nursery.Models.City>()
        .FormData(Model.city)
        .Items(items =>
        {
            
            items.AddSimpleFor(m => m.CityTlAr).IsRequired(true).Label(k => k.Text(sharedResource["TlAr"])).ColSpan(1);
            items.AddSimpleFor(m => m.CityTlEn).IsRequired(true).Label(k => k.Text(sharedResource["TlEn"]));
            items.AddSimpleFor(m => m.CityOrderIndex).IsRequired(true).Label(k => k.Text(sharedResource["Sort"]));
            items.AddSimpleFor(m => m.CityIsActive).Label(k => k.Text(sharedResource["IsActive"]));
            items.AddSimpleFor(m => m.CountryId).Label(k => k.Text(sharedResource["Country"]))
                .Editor(e => e
                    .Lookup()
                    .DataSource(ds => ds.WebApi().Controller("Cities").LoadAction("CountryLookup").Key("Value"))
                    .ValueExpr("Value")
                    .DisplayExpr("Text")
                );
            items.AddButton()
                        .ColSpan(3)
                        .HorizontalAlignment(HorizontalAlignment.Right)
                        .ButtonOptions(b => b.Text(sharedResource["Save"])
                        .Type(ButtonType.Success)
                        .UseSubmitBehavior(true)).CssClass("invers");
        })
)
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







