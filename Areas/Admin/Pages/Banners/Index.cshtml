@page
@model Nursery.Areas.Admin.Pages.Banners.IndexModel
@{
}

<style>
    td {
        text-align: center !important;
    }
</style>
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Banner"] 
                           <a asp-page="Add" class="btn btn-primary">@sharedResource["Add"]  @sharedResource["Banner"]  </a>
                        </h5>
                    </div>
                    <div class="card-body">
                        @(Html.DevExtreme().DataGrid<Nursery.Models.Banner>()
                        .ID("gridContainer")

                        .DataSource(Model.BannerLst)

                        .Columns(columns => {
         columns.AddFor(m => m.BannerPic)
            .Width(100)
            .AllowFiltering(false)
            .AllowSorting(false)
            .CellTemplate(@<text>
                <div>
                    <img width="50" height="50" src="/Images/Banner/<%- value %>" alt="image"/>
                </div>
            </text>).Caption(sharedResource["Picture"]);
                        columns.AddFor(m => m.EntityTypeId).Lookup(lookup => lookup
  .DataSource(ds => ds.WebApi().Controller("Banners").LoadAction("EntityTypeLookup").Key("Value"))
                .ValueExpr("Value")
                .DisplayExpr("Text")
).Caption(sharedResource["Type"]);


                        columns.AddFor(m => m.EntityId).Caption(sharedResource["Name"]);
                        columns.AddFor(m => m.BannerOrderIndex).Caption(sharedResource["Sort"]);
                        columns.AddFor(m => m.BannerIsActive).Caption(sharedResource["IsActive"]);

                        columns.Add().Caption(sharedResource["Actions"]).Width(200).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary btn-sm"  href="/Admin/Banners/Details?id=<%- data.BannerId %>"> <i class="fas fa-eye"></i> </a>
                                <a class="btn btn-success btn-sm"  href="/Admin/Banners/Edit?id=<%- data.BannerId %>">  <i class="fas fa-edit"></i> </a>
                                <a class="btn btn-danger btn-sm" href="/Admin/Banners/Delete?id=<%- data.BannerId %>">  <i class="fas fa-trash"></i> </a>
                            </div>
                        </text>).Width(400);

                        })
                          .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .ShowRowLines(true).ShowColumnLines(true)
                        .RowAlternationEnabled(true)
                        .AllowColumnReordering(true)
                        .ShowBorders(true)
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(240)
                        .Placeholder(sharedResource["SearchTxt"]))
                        .RemoteOperations(true)
                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        )

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

