@page
@model Nursery.Areas.Admin.Pages.Banners.EditModel
@{
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Edit"]  @sharedResource["Banner"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">

                        <form id="form" method="post" enctype="multipart/form-data">
                            @Html.Hidden("NurseryId", "")
                            @(Html.DevExtreme().Form<Nursery.Models.Banner>()

    .ID("BannerForm")
     .OnInitialized("onFormInitialized")
     .FormData(Model.panner)
.Items(items => {
items.AddSimpleFor(m => m.BannerId).Visible(false);
items.AddSimpleFor(m => m.EntityTypeId).IsRequired(true).Label(k => k.Text(sharedResource["Type"]))
       .Editor(e => e
           .Lookup()
           .DataSource(ds => ds.WebApi().Controller("Banners").LoadAction("EntityTypeLookup").Key("Value"))
           .ValueExpr("Value")
           .DisplayExpr("Text")
            .OnValueChanged("onValueChanged")
                  .RtlEnabled(bool.Parse(sharedResource["ArLang"]))

            );
items.AddSimple()
        .Editor(e => e
            .Lookup()
             .DataSource(ds => ds.WebApi().Controller("Banners").LoadAction("NurseryLookup").Key("Value"))
      .DisplayExpr("Text")
        .ValueExpr("Value")
  .OnSelectionChanged("NurseryValueChanged")
                  .RtlEnabled(bool.Parse(sharedResource["ArLang"]))

          .Value(Model.EntityId)

             ).Label(k => k.Text(sharedResource["Nursery"])).Name("Nursery");
items.AddSimpleFor(m => m.EntityId).Name("URL").Label(k => k.Text(sharedResource["ExternalURL"]));
items.AddSimpleFor(m => m.BannerOrderIndex).Label(k => k.Text(sharedResource["Sort"])).IsRequired(true);
items.AddSimpleFor(m => m.BannerIsActive).Label(k => k.Text(sharedResource["IsActive"]));
items.AddSimple().Label(k => k.Text(sharedResource["Picture"])).Template(@<text>
                        <div>
                    <img width="250" height="250" src="/Images/Banner/@Model.panner.BannerPic" alt="banner Picture"/>
                </div>
                            </text> );

            items.AddSimpleFor(m => m.BannerPic).Label(k => k.Text(sharedResource["Change_Picture"])).Template(@<text>


                            @(Html.DevExtreme().FileUploader()
                                        .Name("Photo")
                                        .SelectButtonText(sharedResource["Change_Picture"])
                                        .LabelText("")
                                        .Accept("image/*")
                                        .UploadMode(FileUploadMode.UseForm)
                                                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))

                            .Height(70)
                                                        )

                            </text> );
    items.AddButton()
  .ColSpan(3)
  .HorizontalAlignment(HorizontalAlignment.Right)
  .ButtonOptions(b => b.Text(sharedResource["Save"])
  .Type(ButtonType.Success)
  .UseSubmitBehavior(true)).CssClass("invers");



})
                            )

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var form
    function onFormInitialized(e) {

        form = e.component;

        var pannerTypeId =@Model.panner.EntityTypeId;


        if (pannerTypeId === 1) {
            form.itemOption("Nursery", "visible", true);
            form.itemOption("URL", "visible", false);
        }

        if (pannerTypeId === 2) {
            form.itemOption("URL", "visible", true);
            form.itemOption("Nursery", "visible", false)
        }
    }




    function NurseryValueChanged(data) {
        $("#NurseryId").val(data.selectedItem.Value);
    }

    function onValueChanged(e) {

        if (e.value === 1) {
            form.itemOption("Nursery", "visible", true);
            form.itemOption("URL", "visible", false);
        }

        if (e.value === 2) {
            form.itemOption("URL", "visible", true);
            form.itemOption("Nursery", "visible", false)
        }

    }

</script>