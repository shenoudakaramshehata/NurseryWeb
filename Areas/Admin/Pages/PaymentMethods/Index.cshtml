@page
@model Nursery.Areas.Admin.Pages.PaymentMethods.IndexModel
@{
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Payment Methods"]
                        </h2>
                    </div>
                    <div class="card-body">
                        @(Html.DevExtreme().DataGrid<Nursery.Models.PaymentMethod>()
.DataSource(ds => ds.Mvc()
.Controller("PaymentMethods")
.LoadAction("Get")
@*.InsertAction("Post")*@
.UpdateAction("Put")
@*.DeleteAction("Delete")*@
.Key("PaymentMethodId")
)
.RemoteOperations(true)
.Columns(columns => {
    columns.AddFor(m => m.PaymentMethodTlAr).Caption(sharedResource["PaymentMethodTlAr"]);
    columns.AddFor(m => m.PaymentMethodTlEn).Caption(sharedResource["PaymentMethodTlEn"]);
     columns.AddFor(m => m.IsActive).Caption(sharedResource["Is Active"]);

}

)

.Editing(e => e.Mode(GridEditMode.Popup)
.Texts(c => c.CancelRowChanges(sharedResource["Cancel"]) .SaveRowChanges(sharedResource["Save"]) .EditRow(sharedResource["Edit"]).AddRow(sharedResource["Add"]).ConfirmDeleteMessage(sharedResource["Are you sure to delete this record ?"]))




.AllowUpdating(true)
@*.AllowAdding(true)
.AllowDeleting(true)*@
.UseIcons(true)


.Popup(p => p
.Title(sharedResource["Payment Method"])
.ShowTitle(true)
.MaxWidth(750)
.RtlEnabled(bool.Parse(sharedResource["ArLang"]))


.Height(250))@*.Form(f => f.Items(items =>
{
    items.AddGroup()
    .ColCount(2)
    .ColSpan(2)
    .Items(groupItems =>
    {
        groupItems.AddSimpleFor(e=>e.).DataField(sharedResource["PaymentMethodTlAr"]).IsRequired(true);
        groupItems.AddSimple().DataField(sharedResource["PaymentMethodTlEn"]).IsRequired(true);
    

    });



}))*@

)
    .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                            .ShowRowLines(true).ShowColumnLines(true)
                            .RowAlternationEnabled(true)
                            .AllowColumnReordering(true)
                            .ShowColumnLines(true)
                            .ShowBorders(true)
                            .SearchPanel(searchPanel => searchPanel
                            .Visible(true)
                            .Width(240)
                            .Placeholder(sharedResource["SearchTxt"]))
                            .RemoteOperations(true)
                            .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
)

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>