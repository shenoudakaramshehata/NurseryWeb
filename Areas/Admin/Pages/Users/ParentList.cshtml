@page
@model Nursery.Areas.Admin.Pages.Users.ParentListModel
@{
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Parents"]
                        </h2>
                    </div>
                    <div class="card-body">
                        @(Html.DevExtreme().DataGrid<Nursery.Models.Parent>()
                                       .ID("gridContainer")
                                       .DataSource(Model.parentList)
                                       .Columns(columns => {
                                       columns.AddFor(m => m.ParentName).Caption(sharedResource["Name"]);
                                       columns.AddFor(m => m.ParentPhone).Caption(sharedResource["Phone"]);
                                       columns.AddFor(m => m.ParentEmail).Caption(sharedResource["Email"]);
                                       columns.AddFor(m => m.ParentAddress).Caption(sharedResource["Address"]);
   columns.Add().Caption(sharedResource["Details"]).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary btn-sm"  href="/Admin/Users/Children?id=<%- data.ParentId %>"> @sharedResource["Children"] </a>
                            </div>
                            </text>).Width(200);

                        })
                       .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
                            .HeaderFilter(headerFilter => headerFilter.Visible(true))
                            .ShowRowLines(true).ShowColumnLines(true)
                            .RowAlternationEnabled(true)
                            .AllowColumnReordering(true)
                            .ShowBorders(true)
                            .SearchPanel(searchPanel => searchPanel
                            .Visible(true)
                            .Width(240)
                            .Placeholder(sharedResource["SearchTxt"]))
                            .RemoteOperations(true)
                            .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        )
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>