@page
@model Nursery.Areas.Admin.Pages.Users.NurseryListModel
@{
}




<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Nurseries"]
                                <a asp-page="/Users/AddNursery" asp-area="Admin"  class="btn btn-primary">@sharedResource["Add"]  @sharedResource["Nursery"]  </a>

                        </h2>
                    </div>
                    <div class="card-body">




                        @(Html.DevExtreme().DataGrid<Nursery.Models.NurseryMember>()
                                       .ID("gridContainer")
                                       .DataSource(ds => ds.Mvc()
.Controller("NurseryMembers")
.LoadAction("Get")
.InsertAction("Post")
.UpdateAction("Put")
.DeleteAction("Delete")
.Key("NurseryMemberId")
)
                                       .Columns(columns => {
                                       columns.AddFor(m => m.Logo)
                           .Width(100)
                           .AllowFiltering(false)
                           .AllowSorting(false)
                           .CellTemplate(@<text>
                <div>
                    <img width="50" height="50" src="/Images/NurseryMember/<%- value %>" alt="image"/>
                </div>
            </text>).Caption(sharedResource["Logo"]);

                                      @* columns.AddFor(m => m.IsSlider).Caption(sharedResource["IsSlider"]);*@
                                       columns.AddFor(m => m.NurseryTlAr).Caption(sharedResource["TlAr"]).AllowEditing(false);

                                       columns.AddFor(m => m.NurseryTlEn).Caption(sharedResource["TlEn"]).AllowEditing(false);
                                       columns.AddFor(m => m.Email).Caption(sharedResource["Email"]).AllowEditing(false);
                                       columns.AddFor(m => m.Mobile).Caption(sharedResource["Mobile"]).AllowEditing(false);
                                       columns.AddFor(m => m.CountryId).Lookup(lookup => lookup
                  .DataSource(ds => ds.WebApi().Controller("NurseryMembers").LoadAction("CountryLookup").Key("Value"))
                  .ValueExpr("Value")
                  .DisplayExpr("Text")
                    ).Caption(sharedResource["Country"]);
                                       columns.Add().Caption(sharedResource["Actions"]).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary btn-sm"  href="/Admin/Users/NurseryDetails?id=<%- data.NurseryMemberId %>">@sharedResource["Details"] </a>
                        <br>
                         <a class="btn btn-primary btn-sm"  href="/Admin/Subscriptions/Index?id=<%- data.NurseryMemberId %>"> @sharedResource["Subscriptions"] </a>
                         <a class="btn btn-primary btn-sm"  href="/Admin/Users/editNursery?id=<%- data.NurseryMemberId %>"> @sharedResource["Edit"] </a>
                         <a class="btn btn-danger btn-sm"  href="/Admin/Users/DeleteNursery?id=<%- data.NurseryMemberId %>">@sharedResource["Delete"]  </a>
                            </div>
                            </text>).Width(260);

                                       })
                       .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
                            .HeaderFilter(headerFilter => headerFilter.Visible(true)).ShowColumnLines(true)
                            .ShowRowLines(true).ShowColumnLines(true)
                            .RowAlternationEnabled(true)
                            .AllowColumnReordering(true)
                            .ShowBorders(true)
                            .SearchPanel(searchPanel => searchPanel
                            .Visible(true)
                            .Width(240)
                            .Placeholder(sharedResource["SearchTxt"]))
                            .RemoteOperations(true)
                            .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                            .Editing(e => e.Mode(GridEditMode.Cell)

.AllowUpdating(true)
.AllowAdding(false)
.UseIcons(false)
)
                                        )
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>