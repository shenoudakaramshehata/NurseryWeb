@page
@model Nursery.Areas.Admin.Pages.Users.Children
@{
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Children"]
                        </h2>
                           <div class="col-md-12 invers">
                            <a asp-page="ParentList" class="btn btn-primary"> @sharedResource["Back"]</a>
                            <br />
                        </div>
                    </div>
                    <div class="card-body">
                     
                     

                        @(Html.DevExtreme().DataGrid<Nursery.Models.Child>()
                                   .ID("gridContainer")
                                   .DataSource(ds => ds.Mvc()
.Controller("Children")
.LoadAction("Get")
.InsertAction("Post")
.UpdateAction("Put")
.DeleteAction("Delete")
.Key("ChildId")
.LoadParams(new { parentId =Model.parentId })

)
                                   .Columns(columns =>
                                   {
                                   columns.AddFor(m => m.ChildImage)
                       .Width(100)
                       .AllowFiltering(false)
                       .AllowSorting(false)
                       .CellTemplate(@<text>
                <div>
                    <img width="50" height="50" src="/Images/Child/<%- value %>" alt="image"/>
                </div>
            </text>).Caption(sharedResource["Photo"]);
                                           columns.AddFor(m => m.ChildName).Caption(sharedResource["Name"]);
                                           @* columns.AddFor(m => m.AgeCategoryId).Lookup(lookup => lookup
        .DataSource(ds => ds.WebApi().Controller("Children").LoadAction("AgeCategoryLookup").Key("Value"))
        .ValueExpr("Value")
        .DisplayExpr("Text")
        ).Caption(sharedResource["Age Category"]);*@
                                           columns.AddFor(m => m.AgeCategory.AgeCategoryTlEn).Caption(sharedResource["Age Category"]);
                                           columns.AddFor(m => m.Parent.ParentName).Caption(sharedResource["Parent"]);
                                           columns.AddFor(m => m.NurseryMember.NurseryTlAr).Caption(sharedResource["Nursery"]);


                                       })
                        .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                        pager.Visible(true);
                        pager.DisplayMode(GridPagerDisplayMode.Full);
                        pager.ShowPageSizeSelector(true);
                        pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                        pager.ShowInfo(true);
                        pager.ShowNavigationButtons(true);

                        })
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .ShowRowLines(true).ShowColumnLines(true)
                        .RowAlternationEnabled(true)
                        .AllowColumnReordering(true)
                        .ShowBorders(true)
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(240)
                        .Placeholder(sharedResource["SearchTxt"]))
                        .RemoteOperations(true)
                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                        )
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>