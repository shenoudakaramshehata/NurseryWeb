@page
@model Nursery.Areas.Admin.Pages.IndexModel
@{
}
@inject Nursery.Data.NurseryContext _context
<link href="~/Admin/assets/libs/c3/c3.min.css" rel="stylesheet" type="text/css">

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="mini-stat">
                            <span class="mini-stat-icon bg-purple me-0 float-end"><i class="mdi mdi-basket"></i></span>
                            <div class="mini-stat-info">
                                <span class="counter text-purple">@_context.NurseryMember.Count()</span>
                                
                                @sharedResource["Nurseries"]
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!--End col -->
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="mini-stat">
                            <span class="mini-stat-icon bg-blue-grey me-0 float-end"><i class="mdi mdi-black-mesa"></i></span>
                            <div class="mini-stat-info">
                                <span class="counter text-blue-grey">@_context.Parent.Count()</span>
                                
                                @sharedResource["Parents"]
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End col -->
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="mini-stat">
                            <span class="mini-stat-icon bg-brown me-0 float-end"><i class="fas fa-male"></i></span>
                            <div class="mini-stat-info">
                                <span class="counter text-brown">@_context.Child.Count()</span>
                                
                                @sharedResource["Childs"]
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End col -->
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="mini-stat">
                            <span class="mini-stat-icon bg-teal me-0 float-end"><i class="mdi mdi-coffee"></i></span>
                            <div class="mini-stat-info">
                                <span class="counter text-teal">@_context.Country.Count()</span>
                                
                                @sharedResource["Countries"]
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--end col -->
        </div> <!-- end row-->
        <!-- end row -->

    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->

<script src="~/Admin/assets/libs/peity/jquery.peity.min.js"></script>
<!--C3 Chart-->
<script src="~/Admin/assets/libs/d3/d3.min.js"></script>
<script src="~/Admin/assets/libs/c3/c3.min.js"></script>

<script src="~/Admin/assets/libs/jquery-knob/jquery.knob.min.js"></script>

<script src="~/Admin/assets/js/pages/dashboard.init.js"></script>

<script src="~/Admin/assets/js/app.js"></script>